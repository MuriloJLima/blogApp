{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{/each}}

{{!-- formulário para adicionar postagem --}}
<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        {{!-- link que conecta o formulario com o back --}}
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" id="titulo" class="form-control"> <br>

            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control"> <br>

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control"> <br>

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control"></textarea> <br>

            <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select"> <br>
                {{#each categorias}}
                    <option value="{{id}}">{{nome}}</option>

                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3">Criar postagem</button>
        </form>
    </div>

</div>