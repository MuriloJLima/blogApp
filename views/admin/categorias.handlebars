{{!-- pagina de listagem de categoria --}}

<h2>Lista de categorias</h2>
<hr>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>slug: {{slug}}</small> <br>
            <a href="/admin/categorias/edit/{{id}}"><button class="btn btn-success mt-3">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{id}}">
                <button type="submit" class="btn btn-danger mt-3">Deletar categoria</button>

            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}
<hr>

<div>
    <a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
</div>
<br>